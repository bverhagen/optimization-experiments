project optimization : build-dir build ;

using gcc : c++11 : "g++" : <cxxflags>-std=c++11 
                            <cxxflags>-Werror
                            <cxxflags>-save-temps 
                            <cxxflags>-fverbose-asm 
                  ;
using clang : c++11 : "clang++" :   <cxxflags>-std=c++11
                                    <cxxflags>-msse2 
                                    <cxxflags>-save-temps 
                                    <cxxflags>-fverbose-asm 
                  ;

use-project /3rdparty : 3rdparty ;
use-project /unittest-lib : catch ;
use-project /performance : performance ;
use-project /common : common ;
use-project /simd-and : simd-and ;

install unittest : /simd-and//simd-and-unittest
                 : <variant>release:<location>bin/release/test/unittest
                   <variant>debug:<location>bin/debug/test/unittest
                 ;

install performance  : /simd-and//simd-and-performance
                     : <variant>release:<location>bin/release/performance
                       <variant>debug:<location>bin/debug/performance
                     ;
