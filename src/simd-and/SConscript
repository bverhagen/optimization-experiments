Import('env')

import copy
import buildTools

includes = [
    'include',
]

libs = [
    'common'
]

libs_path = [
    env['LIBS_DIR'],
    env['THIRD_PARTY_LIBS_DIR'],
]

sources = ['src/unittest.cpp']
unittest = buildTools.createUnittest(env, 'simd-and-unittest', sources, includes, libs, libs_path)
bin = env.Alias("simd-and", unittest)

sources = Glob('src/benchmark-*.cpp')
benchmarks = buildTools.createBenchmark(env, 'simd-and-benchmark', sources, includes, libs, libs_path, TEMPS=['.s'])
for target in benchmarks:
    env.Alias("simd-and", target)
